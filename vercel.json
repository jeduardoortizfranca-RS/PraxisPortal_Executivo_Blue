{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12",
    "PORT": "8000"
  }
}
